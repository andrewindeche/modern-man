{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "import",
        "jsx-a11y",
        "react-hooks"
    ],
    "rules": {
        "react/function-component-definition": [
            "error",
            {
              "namedComponents": "arrow-function",
              "unnamedComponents": "arrow-function"
            }
          ],
          "no-param-reassign": [
            "error",
            {
              "props": true,
              "ignorePropertyModificationsFor": ["state", "draft"]
            }
          ]
    }
}
